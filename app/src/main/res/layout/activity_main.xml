<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true">
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
	android:background="#001F3F"> <!-- Dark Navy Blue Background -->


	<!-- Title TextView -->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/archivo_black"
		android:text="649 Scouting"
		android:textAppearance="@style/TextAppearance.AppCompat.Display1"
		android:textColor="#FFFFFF"
		android:textSize="40sp" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/archivo_black"
		android:text="FRC Crescendo"
		android:textAppearance="@style/TextAppearance.AppCompat.Display1"
		android:textColor="#FFFFFF"
		android:textSize="28sp" />
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Name:"
			android:textSize="15sp"
			android:fontFamily="@font/archivo_black"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
			android:textColor="#FFFFFF" />
		<EditText
			android:layout_width="190dp"
			android:layout_height="33dp"
			android:inputType="text"
			android:layout_marginTop="8dp"/>
	</LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Team#:"
			android:textSize="15sp"
			android:fontFamily="@font/archivo_black"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
			android:textColor="#FFFFFF" />
		<EditText
			android:layout_width="190dp"
			android:layout_height="33dp"
			android:inputType="text"
			android:layout_marginTop="8dp"/>
	</LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Alliance:"
			android:textSize="15sp"
			android:fontFamily="@font/archivo_black"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
			android:textColor="#FFFFFF" />
		<EditText
			android:layout_width="190dp"
			android:layout_height="33dp"
			android:inputType="text"
			android:layout_marginTop="8dp"/>
	</LinearLayout>
	<!-- Timer TextView -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<!-- Timer TextView -->
		<TextView
			android:id="@+id/timerTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/archivo_black"
			android:text="00:00"
			android:textColor="#FFFFFF"
			android:textSize="24sp" />

		<!-- Start Button -->
		<com.google.android.material.button.MaterialButton
			android:id="@+id/startButton"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="Start"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp" />
	</LinearLayout>

	<!-- True and False Buttons -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp"
		android:gravity="center_horizontal">

		<!-- Auton Button -->
		<com.google.android.material.button.MaterialButton
			android:id="@+id/switch_auton"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="3dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="AUTON"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp"
			 />

		<!-- Teleop Button -->
		<com.google.android.material.button.MaterialButton
			android:id="@+id/switch_teleop"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="3dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="TELEOP"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp" />


	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp"
		android:gravity="center_horizontal">

		<com.google.android.material.button.MaterialButton
			android:id="@+id/source_pickup"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="3dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="SOURCE"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/ground_pickup"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="3dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="GROUND"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp" />

	</LinearLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/field"
			android:layout_width="300dp"
			android:layout_height="200dp"
			android:background="@drawable/field"/>


            <Button
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:background="@drawable/speaker"
                android:layout_marginStart="30dp"
                android:layout_marginTop="55dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/speaker"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/red_hat_display_black"
                android:text="SPEAKER"
                android:textColor="@color/blue"
                app:cornerRadius="4dp"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp" />

            <Button
                android:layout_width="87dp"
                android:layout_height="35dp"
                android:background="@drawable/speaker"
                android:layout_marginStart="105dp"
                android:layout_marginTop="5dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/amp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:fontFamily="@font/red_hat_display_black"
                android:text="AMP"
                android:textColor="@color/blue"
                app:cornerRadius="4dp"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp" />


		<Button
			android:layout_width="100dp"
			android:layout_height="37dp"
			android:layout_marginStart="30dp"
			android:layout_marginTop="55dp"
			android:background="@drawable/speaker"
			tools:visibility="invisible" />



		<Button
			android:layout_width="87dp"
			android:layout_height="35dp"
			android:layout_marginStart="105dp"
			android:layout_marginTop="5dp"
			android:background="@drawable/speaker"
			tools:visibility="invisible" />


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="310dp"
			android:layout_marginTop="10dp"
			android:text="Speakers Scored:"
			android:textColor="@color/white"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/speakers_scored"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="330dp"
			android:layout_marginTop="40dp"
			android:text="0"
			android:textColor="@color/white"
			android:textSize="50sp" />

		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="315dp"
			android:layout_marginTop="100dp"
			android:text="AMPs Scored:"
			android:textColor="@color/white"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/amps_scored"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="330dp"
			android:layout_marginTop="130dp"
			android:text="0"
			android:textColor="@color/white"
			android:textSize="50sp" />
	</FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fail"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/red_hat_display_black"
                android:text="FAIL"
                android:textColor="#FFFFFF"
                app:cornerRadius="4dp"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/score"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/red_hat_display_black"
                android:text="SCORE"
                android:textColor="#FFFFFF"
                app:cornerRadius="4dp"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/undo"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/red_hat_display_black"
                android:text="UNDO"
                android:textColor="#FFFFFF"
                app:cornerRadius="4dp"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/drop"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/red_hat_display_black"
                android:text="DROP"
                android:textColor="#FFFFFF"
                app:cornerRadius="4dp"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp" />

        </LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Time taken to Cycle: "
			android:textSize="17sp"
			android:fontFamily="@font/archivo_black"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
			android:textColor="#FFFFFF" />
		<EditText
			android:layout_width="190dp"
			android:layout_height="33dp"
			android:inputType="text"
			android:layout_marginTop="10dp"/>
	</LinearLayout>
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Endgame"
		android:textSize="30sp"
		android:gravity="center_horizontal"
		android:fontFamily="@font/archivo_black"
		android:textAppearance="@style/TextAppearance.AppCompat.Display1"
		android:textColor="#FFFFFF" />
</LinearLayout>
<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
<!--	spotlight row-->
	<TextView
		android:id="@+id/endgame1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Spotlight"
		android:textSize="17sp"
		android:layout_marginTop="10dp"
		android:layout_marginStart="40dp"
		android:fontFamily="@font/archivo_black"
		android:textAppearance="@style/TextAppearance.AppCompat.Display1"
		android:textColor="#FFFFFF" />
	<com.google.android.material.button.MaterialButton
		android:id="@+id/succesful_spotlight"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@+id/endgame1"
		android:layout_marginStart="10dp"
		android:fontFamily="@font/red_hat_display_black"
		android:text="YES"
		android:textColor="#FFFFFF"
		android:textSize="20sp"
		app:cornerRadius="4dp"
		app:strokeColor="#FFFFFF"
		app:strokeWidth="2dp" />
	<com.google.android.material.button.MaterialButton
		android:id="@+id/unsuccesful_spotlight"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/succesful_spotlight"
		android:layout_marginStart="10dp"
		android:fontFamily="@font/red_hat_display_black"
		android:text="No"
		android:textColor="#FFFFFF"
		android:textSize="20sp"
		app:cornerRadius="4dp"
		app:strokeColor="#FFFFFF"
		app:strokeWidth="2dp" />
	<!--	Buddy Climb row-->
	<TextView
		android:id="@+id/endgame2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Spotlight"
		android:layout_below="@+id/endgame1"
		android:textSize="17sp"
		android:layout_marginTop="10dp"
		android:layout_marginStart="40dp"
		android:fontFamily="@font/archivo_black"
		android:textAppearance="@style/TextAppearance.AppCompat.Display1"
		android:textColor="#FFFFFF" />
	<com.google.android.material.button.MaterialButton
		android:id="@+id/succesful_buddy_climb"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@+id/endgame1"
		android:layout_marginStart="10dp"
		android:fontFamily="@font/red_hat_display_black"
		android:text="YES"
		android:textColor="#FFFFFF"
		android:textSize="20sp"
		app:cornerRadius="4dp"
		app:strokeColor="#FFFFFF"
		app:strokeWidth="2dp" />

	<com.google.android.material.button.MaterialButton
		android:id="@+id/unsuccesful_buddy_climb"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_toRightOf="@+id/succesful_spotlight"
		android:fontFamily="@font/red_hat_display_black"
		android:text="No"
		android:textColor="#FFFFFF"
		android:textSize="20sp"
		app:cornerRadius="4dp"
		app:strokeColor="#FFFFFF"
		app:strokeWidth="2dp" />
</RelativeLayout>
