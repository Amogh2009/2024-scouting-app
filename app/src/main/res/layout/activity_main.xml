<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"                                                                                                                                                                                                                                             out_height="match_parent"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/almostBlack"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Name:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:id="@+id/inputTextName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="60sp"
            android:textColor="@android:color/white" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="blue"
            android:textOff="blue"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start_pause"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="-180dp"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/blue"
            android:layout_below="@+id/text_view_countdown"
            android:layout_centerHorizontal="true"
            android:text="Start" />


            <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            android:layout_marginTop="75dp"
            android:layout_width="90dp"
            android:layout_height="100dp"
                android:backgroundTint="@color/blue"
            android:text="Reset"
            android:visibility="invisible"
            tools:visibility="visible"/>



    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="-20dp"
                android:text="Color:"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <EditText
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="-5dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:id="@+id/inputTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="25dp"
                tools:ignore="DuplicateIds" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="-10dp"
            android:text="Match#:"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <EditText
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:autofillHints="######"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:id="@+id/inputTextMatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20dp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="-10dp"
            android:text="Team#:"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <EditText
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:id="@+id/inputTextTeam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20dp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ToggleButton
                android:id="@+id/switch_auton"
                android:textColor="@color/white"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/toggle_color"
                android:textOff="AUTON"
                android:textOn="AUTON"
                android:textSize="10sp"/>
            <ToggleButton
                android:id="@+id/switch_teleop"
                android:textColor="@color/white"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/toggle_color"
                android:textOff="TElEOP"
                android:textOn="TElEOP"
                android:textSize="10sp" /></LinearLayout>
            <LinearLayout
                android:id="@+id/pickup_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:text="Pickup location"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <ToggleButton
                    android:id="@+id/source_pickup"
                    android:textColor="@color/white"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/toggle_color"
                    android:textOff="Source"
                    android:textOn="Source"
                    android:textSize="10sp" />

                <ToggleButton
                    android:id="@+id/ground_pickup"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/toggle_color"
                    android:textColor="@color/white"
                    android:textOff="ground"
                    android:textOn="ground"
                    android:textSize="10sp" />
            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/field"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="-389dp"
                        android:layout_toEndOf="@+id/textView2"
                        android:background="@drawable/field"
                        android:textOff=""
                        android:textOn=""
                        app:cornerRadius="10dp" />

                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/speaker"
                        android:textColor="@color/white"
                        android:textOff="speaker"
                        android:textOn="SPEAKER" />
                    <Button
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="62dp"
                        android:backgroundTint="@color/lightgray"/>
                    <ToggleButton
                        android:id="@+id/amp"
                        android:textOn="AMP"
                        android:textOff="AMP"
                        android:textColor="@color/white"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="105dp"
                        android:background="@drawable/speaker"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="2dp"
                        android:backgroundTint="@color/lightgray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="315dp"
                        android:layout_marginTop="10dp"
                        android:text="Speakers Scored:"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/speakers_scored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:layout_marginStart="340dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="320dp"
                        android:layout_marginTop="100dp"
                        android:text="AMPs Scored:"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/amps_scored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:layout_marginStart="340dp"
                        android:layout_marginTop="100dp"/>
                </RelativeLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fail"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/blue"
                        android:text="fail"
                        android:textSize="11sp"
                        app:cornerRadius="32dp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/score"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/blue"
                        android:text="score"
                        android:textSize="11sp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/undo"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/blue"
                        android:text="undo"
                        android:textSize="11sp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/drop"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/blue"
                        android:text="drop"
                        android:textSize="11sp"
                        app:cornerRadius="32dp" />

                </LinearLayout>

            </LinearLayout>


    </LinearLayout>

