<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
	android:background="#001F3F"> <!-- Dark Navy Blue Background -->

	<!-- Title TextView -->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/archivo_black"
		android:text="649 Scouting"
		android:textAppearance="@style/TextAppearance.AppCompat.Display1"
		android:textColor="#FFFFFF"
		android:textSize="40sp" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/archivo_black"
		android:text="FRC Crescendo"
		android:textAppearance="@style/TextAppearance.AppCompat.Display1"
		android:textColor="#FFFFFF"
		android:textSize="28sp" />

	<!-- Timer TextView -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<!-- Timer TextView -->
		<TextView
			android:id="@+id/timerTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/archivo_black"
			android:text="00:00"
			android:textColor="#FFFFFF"
			android:textSize="24sp" />

		<!-- Start Button -->
		<com.google.android.material.button.MaterialButton
			android:id="@+id/startButton"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="Start"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp" />
	</LinearLayout>

	<!-- True and False Buttons -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp"
		android:gravity="center_horizontal">

		<!-- Auton Button -->
		<com.google.android.material.button.MaterialButton
			android:id="@+id/switch_auton"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="3dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="AUTON"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp"
			 />

		<!-- Teleop Button -->
		<com.google.android.material.button.MaterialButton
			android:id="@+id/switch_teleop"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="3dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="TELEOP"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp" />


	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp"
		android:gravity="center_horizontal">

		<com.google.android.material.button.MaterialButton
			android:id="@+id/source_pickup"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="3dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="SOURCE"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/ground_pickup"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="3dp"
			android:fontFamily="@font/red_hat_display_black"
			android:text="GROUND"
			android:textColor="#FFFFFF"
			app:cornerRadius="4dp"
			app:strokeColor="#FFFFFF"
			app:strokeWidth="2dp" />

	</LinearLayout>

	<FrameLayout
