    <LinearLayout
        style="@style/buttonRow">

        <TextView
            style="@style/buttonNumber"
            android:text="Time taken to Cycle: "
            android:layout_width="30dp"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_width="230dp"
            android:layout_height="33dp"
            android:inputType="text" />


    </LinearLayout>

        <LinearLayout
            style="@style/buttonRow">

            <TextView
                style="@style/buttonNumber"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Endgame:" />
        </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <TextView
            style="@style/buttonNumber"
            android:text="Spotlight: "
            android:layout_width="30dp"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            />

        <Button
            style="@style/buttonNumber"
            android:id="@+id/succesful_spotlight"
            android:gravity="center"
            android:text="Yes"/>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/unsuccesful_spotlight"
            android:gravity="center"
            android:text="No"/>


    </LinearLayout>
        <LinearLayout
            style="@style/buttonRow">

            <TextView
                style="@style/buttonNumber"
                android:text="Buddy Climb: "
                android:layout_width="30dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                />

            <Button
                style="@style/buttonNumber"
                android:id="@+id/succesful_buddy_climb"
                android:gravity="center"
                android:text="Yes"/>
            <Button
                style="@style/buttonNumber"
                android:id="@+id/unsuccesful_buddy_climb"
                android:gravity="center"
                android:text="No"/>


        </LinearLayout>
        <LinearLayout
            style="@style/buttonRow">

            <TextView
                style="@style/buttonNumber"
                android:text="Trap: "
                android:layout_width="30dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                />

            <Button
                style="@style/buttonNumber"
                android:id="@+id/succesful_trap"
                android:gravity="center"
                android:text="Yes"/>
            <Button
                style="@style/buttonNumber"
                android:id="@+id/unsuccesful_trap"
                android:gravity="center"
                android:text="No"/>


        </LinearLayout>
        <LinearLayout
            style="@style/buttonRow">
            <TextView
                style="@style/buttonNumber"
                android:text="Onstage: "
                android:layout_width="30dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                />

            <Button
                style="@style/buttonNumber"
                android:id="@+id/succesful_onstage"
                android:gravity="center"
                android:text="Yes"/>
            <Button
                style="@style/buttonNumber"
                android:id="@+id/unsuccesful_onstage"
                android:gravity="center"
                android:text="No"/>


        </LinearLayout>
        <LinearLayout
            style="@style/buttonRow">
            <TextView
                style="@style/buttonNumber"
                android:text="# Times Blocked: "
                android:layout_width="30dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                />

            <Button
                style="@style/buttonNumber"
                android:id="@+id/up_times_blocked"
                android:gravity="center"
                android:text="+"/>
            <Button
                style="@style/buttonNumber"
                android:id="@+id/down_times_blocked"
                android:gravity="center"
                android:text="-"/>


        </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <TextView
            style="@style/buttonNumber"
            android:text="Defence Area"
            android:layout_width="30dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/region_1"
            android:gravity="center"
            android:text="1"/>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/region_2"
            android:gravity="center"
            android:text="2"/>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/region_3"
            android:gravity="center"
            android:text="3"/>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/region_4"
            android:gravity="center"
            android:text="4"/>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/region_5"
            android:gravity="center"
            android:text="5"/>

    </LinearLayout>
<!--    </LinearLayout>-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:padding="20dp">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            style="@style/buttonNumber"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Submit" />
    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>