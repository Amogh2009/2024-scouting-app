<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    out_height="match_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/almostBlack"
            android:orientation="vertical"
            tools:context=".MainActivity"
            tools:ignore="HardcodedText">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Name:"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/inputTextName"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textSize="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/text_view_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="00:00"
                        android:textColor="@android:color/white"
                        android:textSize="60sp" />

                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="blue"
                        android:textOn="blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_start_pause"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/text_view_countdown"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="-180dp"
                        android:layout_marginTop="75dp"
                        android:backgroundTint="@color/blue"
                        android:text="Start" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_reset"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="75dp"
                        android:backgroundTint="@color/blue"
                        android:text="Reset"
                        android:visibility="invisible"
                        tools:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="-20dp"
                        android:text="Color:"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/inputTextColor"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginTop="-5dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textSize="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="DuplicateIds" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="-10dp"
                        android:text="Match#:"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/inputTextMatch"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:autofillHints="######"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="DuplicateIds" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="-10dp"
                        android:text="Team#:"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/inputTextTeam"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="DuplicateIds" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ToggleButton
                            android:id="@+id/switch_auton"
                            android:layout_width="61dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/toggle_color"
                            android:textColor="@color/white"
                            android:textOff="AUTON"
                            android:textOn="AUTON"
                            android:textSize="10sp" />

                        <ToggleButton
                            android:id="@+id/switch_teleop"
                            android:layout_width="61dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/toggle_color"
                            android:textColor="@color/white"
                            android:textOff="TElEOP"
                            android:textOn="TElEOP"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pickup_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:text="Pickup location"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <ToggleButton
                            android:id="@+id/source_pickup"
                            android:layout_width="61dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/toggle_color"
                            android:textColor="@color/white"
                            android:textOff="Source"
                            android:textOn="Source"
                            android:textSize="10sp" />

                        <ToggleButton
                            android:id="@+id/ground_pickup"
                            android:layout_width="61dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/toggle_color"
                            android:textColor="@color/white"
                            android:textOff="ground"
                            android:textOn="ground"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/field"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="-389dp"
                            android:layout_toEndOf="@+id/textView2"
                            android:background="@drawable/field"
                            android:textOff=""
                            android:textOn=""
                            app:cornerRadius="10dp" />

                        <ToggleButton
                            android:id="@+id/speaker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/speaker"
                            android:textColor="@color/white"
                            android:textOff="speaker"
                            android:textOn="SPEAKER" />

                        <Button
                            android:layout_width="65dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="62dp"
                            android:backgroundTint="@color/lightgray" />

                        <ToggleButton
                            android:id="@+id/amp"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="105dp"
                            android:background="@drawable/speaker"
                            android:textColor="@color/white"
                            android:textOff="AMP"
                            android:textOn="AMP" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="110dp"
                            android:layout_marginTop="2dp"
                            android:backgroundTint="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="315dp"
                            android:layout_marginTop="10dp"
                            android:text="Speakers Scored:"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/speakers_scored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="340dp"
                            android:layout_marginTop="10dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="50sp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="320dp"
                            android:layout_marginTop="100dp"
                            android:text="AMPs Scored:"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/amps_scored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="340dp"
                            android:layout_marginTop="100dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="50sp" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/fail"
                            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                            android:layout_width="100dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/blue"
                            android:text="fail"
                            android:textSize="11sp"
                            app:cornerRadius="32dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/score"
                            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                            android:layout_width="100dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/blue"
                            android:text="score"
                            android:textSize="11sp"
                            app:cornerRadius="32dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/undo"
                            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                            android:layout_width="100dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/blue"
                            android:text="undo"
                            android:textSize="11sp"
                            app:cornerRadius="32dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/drop"
                            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                            android:layout_width="100dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/blue"
                            android:text="drop"
                            android:textSize="11sp"
                            app:cornerRadius="32dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!--<LinearLayout-->
            <!--    android:layout_width="match_parent"-->
            <!--    android:layout_height="200dp">-->

            <!--        -->
            <!--        AMOGH CODE BELOW THIS LINE ONLY! OK GOT IT ! -->
            <!--        -->
            <!--        -->
            <!--        -->
            <!--        -->
            <LinearLayout style="@style/buttonRow">

                <TextView
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Time taken to Cycle: "
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="230dp"
                    android:layout_height="33dp"
                    android:inputType="text" />


            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <TextView
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Endgame:" />
            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <TextView
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Spotlight: "
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/succesful_spotlight"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="Yes" />

                <Button
                    android:id="@+id/unsuccesful_spotlight"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="No" />


            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <TextView
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Buddy Climb: "
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/succesful_buddy_climb"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="Yes" />

                <Button
                    android:id="@+id/unsuccesful_buddy_climb"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="No" />


            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <TextView
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Trap: "
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/succesful_trap"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="Yes" />

                <Button
                    android:id="@+id/unsuccesful_trap"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="No" />


            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <TextView
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Onstage: "
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/succesful_onstage"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="Yes" />

                <Button
                    android:id="@+id/unsuccesful_onstage"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="No" />


            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <TextView
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="# Times Blocked: "
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/up_times_blocked"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="+" />

                <Button
                    android:id="@+id/down_times_blocked"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:text="-" />


            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <TextView
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Defence Area"
                    android:textSize="15sp" />

                <ToggleButton
                    android:id="@+id/region_1"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:textOff="1"
                    android:textOn="1" />

                <ToggleButton
                    android:id="@+id/region_2"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:textOff="2"
                    android:textOn="2" />

                <ToggleButton
                    android:id="@+id/region_3"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:textOff="3"
                    android:textOn="3" />

                <ToggleButton
                    android:id="@+id/region_4"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:textOff="4"
                    android:textOn="4" />

                <ToggleButton
                    android:id="@+id/region_5"
                    style="@style/buttonNumber"
                    android:gravity="center"
                    android:textOff="5"
                    android:textOn="5" />

            </LinearLayout>
            <!--    </LinearLayout>-->


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="0"
                android:padding="20dp">


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout style="@style/buttonRow">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submit"
                    style="@style/buttonNumber"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Submit" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
